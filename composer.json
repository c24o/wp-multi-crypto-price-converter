{
	"name": "c24o/multi-cripto-convert-wp-plugin",
	"description": "A WordPress plugin for instant multi-crypto conversions.",
	"type": "wordpress-plugin",
	"license": "MIT license",
	"require": {
		"php": ">=8.0",
		"psr/simple-cache": "^3.0",
		"league/container": "^5.1"
	},
	"require-dev": {
		"phpstan/phpstan": "^2.1",
		"phpunit/phpunit": "^9.5",
		"squizlabs/php_codesniffer": "^3.13",
		"wp-coding-standards/wpcs": "^3.2",
		"wp-phpunit/wp-phpunit": "^6.9",
		"yoast/phpunit-polyfills": "^4.0"
	},
	"autoload": {
		"classmap": [
			"includes/",
			"tests/includes/"
		]
	},
	"autoload-dev": {
		"classmap": [
			"includes/",
			"tests/includes/"
		]
	},
	"scripts": {
		"test": "phpunit --configuration tests/phpunit.xml",
		"phpstan": "vendor/phpstan/phpstan/phpstan analyse --configuration=phpstan.neon",
		"phpcs": "vendor/bin/phpcs --standard=phpcs.xml",
		"lint": [
			"@phpcs",
			"@phpstan"
		]
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
