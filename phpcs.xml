<?xml version="1.0"?>
<ruleset name="Multi-Crypto Convert Rules">
    <rule ref="WordPress">
        <!-- Allow PHP short array syntax across the project -->
        <exclude name="Universal.Arrays.DisallowShortArraySyntax.Found"/>

        <!-- Allow free alignment of multiple statements -->
        <exclude name="Generic.Formatting.MultipleStatementAlignment.NotSameWarning"/>

        <!-- Allow free alignment of array double arrows -->
        <exclude name="WordPress.Arrays.MultipleStatementAlignment.DoubleArrowNotAligned"/>
    </rule>

    <rule ref="WordPress-Extra"/>

    <!-- Allow free alignment of function parameters -->
    <rule ref="Squiz.Commenting.FunctionComment">
        <exclude name="Squiz.Commenting.FunctionComment.SpacingAfterParamType"/>
    </rule>

    <file>src</file>
    <file>multi-crypto-price-converter.php</file>
    <exclude-pattern>build/*</exclude-pattern>

    <arg name="basepath" value="."/>
</ruleset>
